{
  "expo": {
    "name": "SpotLight",
    "slug": "spotlight",
    "version": "1.0.0",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "orientation": "portrait",
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "SpotLight uses your location to show trending movies near you."
      }
    },
    "android": {
      "permissions": [
        "ACCESS_FINE_LOCATION"
      ]
    }
  }
}
